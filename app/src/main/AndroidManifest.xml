<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.smartganado.smart_ganado">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".view.ViewHistoryBookActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_view_history_book"
            android:theme="@style/FullscreenTheme"></activity>
        <activity android:name=".view.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SigninActivity" />
        <activity android:name=".view.ViewEventActivity" />
        <activity android:name=".view.ViewIndicatorsActivity" />
        <activity android:name=".view.ViewProfileActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.NewUserActivity" />


        <activity
            android:name=".view.ViewEstateActivity"
            android:label="@string/title_view_estates"
            android:parentActivityName=".view.HomeActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:theme="@style/AppTheme.NoActionBar"
                android:value="com.app.smartganado.smart_ganado.view.HomeActivity" />
        </activity>
        <activity
            android:name=".view.NewEstateActivity"
            android:label="@string/title_new_estate"
            android:parentActivityName=".view.ViewEstateActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:theme="@style/AppTheme.NoActionBar"
                android:value="com.app.smartganado.smart_ganado.view.HomeActivity" />
        </activity>


        <activity
            android:name=".view.ViewCattleActivity"
            android:label="@string/title_view_cattles"
            android:parentActivityName=".view.HomeActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:theme="@style/AppTheme.NoActionBar"
                android:value="com.app.smartganado.smart_ganado.view.HomeActivity" />
        </activity>
        <activity
            android:name=".view.NewCattleActivity"
            android:label="@string/title_new_cattle"
            android:parentActivityName=".view.ViewCattleActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:theme="@style/AppTheme.NoActionBar"
                android:value="com.app.smartganado.smart_ganado.view.HomeActivity" />
        </activity>


    </application>

</manifest>